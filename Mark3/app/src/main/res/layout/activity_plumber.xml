<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.neeraj.mark3.activities.Plumber"
    android:background="#44de7bc2"
    android:clickable="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@drawable/smalllinear2white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:text="Name"
                        android:textStyle="italic"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/EditTextNAME"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:textStyle="italic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:inputType="textPersonName"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="24dp"
                        android:text="Mobile No."
                        android:textStyle="italic"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextMOBI"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:inputType="phone"
                        android:textStyle="italic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:textSize="15dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="39dp"
                        android:textStyle="italic"
                        android:text="E-mail Id"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextMAIL"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:textStyle="italic"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:textSize="15dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="39dp"
                        android:textStyle="italic"
                        android:text="Address"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextADDRESS"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:textStyle="italic"
                        android:inputType="textPostalAddress"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:textSize="15dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="39dp"
                        android:textStyle="italic"
                        android:text="Description"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:textStyle="italic"
                        android:inputType="textMultiLine"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:textSize="15dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="39dp"
                        android:textStyle="italic"
                        android:text="Model"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:dropDownSelector="@android:color/holo_blue_bright" />


                </LinearLayout>

                <!-- select image -->
                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="267sp"

                        >

                        <ImageView
                            android:id="@+id/imageviewPLUMBER"
                            android:focusable="true"
                            android:layout_width="150sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#ff949bd2" />

                        <ImageView
                            android:id="@+id/ivplumber"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal" />

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:id="@+id/buttonsubmit1"
                android:textAllCaps="false"
                android:background="@drawable/smalllinear"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5sp"
                android:textColor="#ffffff"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
