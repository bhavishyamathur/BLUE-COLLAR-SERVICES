<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Profileview">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- select image -->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="267sp"

                    >

                    <ImageView
                        android:id="@+id/imageview_propicfb"
                        android:focusable="true"
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/profilepic"
                        />

                <ImageView
                    android:id="@+id/ivprofile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

                </FrameLayout>

            </LinearLayout>

           <LinearLayout
               android:layout_marginTop="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:padding="10sp"
                android:background="@drawable/smalllinear2white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:text="Username"
                        android:textStyle="italic"
                        android:textColor="#2f2f2f"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/EditTextname"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:textStyle="italic"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:hint="edit"
                        android:textColor="#778899"
                        android:inputType="textPersonName"
                        android:textSize="15dp" />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="40dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="30dp"
                       android:text="Password"
                       android:textStyle="italic"
                       android:textColor="#2f2f2f"
                       android:textSize="15dp" />

                   <EditText
                       android:id="@+id/EditTextpassword"
                       android:layout_width="fill_parent"
                       android:layout_height="35dp"
                       android:textStyle="italic"
                       android:password="true"
                       android:layout_gravity="center_vertical"
                       android:layout_marginRight="7dp"
                       android:layout_weight="1"
                       android:gravity="bottom|center_horizontal"
                       android:hint="edit"
                       android:textColor="#778899"
                       android:inputType="textPersonName"
                       android:textSize="15dp" />
               </LinearLayout>

                 <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="39dp"
                   android:textStyle="italic"
                   android:text="E-mail Id"
                   android:textColor="#2f2f2f"
                   android:textSize="15dp" />

               <EditText
                   android:id="@+id/editTextViewemailid"
                   android:layout_width="fill_parent"
                   android:layout_height="35dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="7dp"
                   android:textStyle="italic"
                   android:inputType="textEmailAddress"
                   android:layout_weight="1"
                   android:gravity="bottom|center_horizontal"
                   android:hint="edit"
                   android:textColor="#778899"
                   android:textSize="15dp" />


           </LinearLayout>

           <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="40dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="24dp"
                       android:text="Mobile No."
                       android:textStyle="italic"
                       android:textColor="#2f2f2f"
                       android:textSize="15dp" />

                   <EditText
                       android:id="@+id/editTextViewmobileno"
                       android:layout_width="fill_parent"
                       android:layout_height="35dp"
                       android:inputType="phone"
                       android:textStyle="italic"
                       android:layout_gravity="center_vertical"
                       android:layout_marginRight="7dp"
                       android:layout_weight="1"
                       android:gravity="bottom|center_horizontal"
                       android:hint="edit"
                       android:textColor="#778899"
                       android:textSize="15dp" />


               </LinearLayout>


           </LinearLayout>

            <Button
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:id="@+id/buttonsignup"
                android:textAllCaps="false"
                android:background="@drawable/smalllinear"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5sp"
                android:textColor="#ffffff"
                />

            </LinearLayout>
    </ScrollView>
</RelativeLayout>
